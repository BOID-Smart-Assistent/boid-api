{
  "name": "boid-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build:frontend": "esbuild src/views/ts/**/*.ts --bundle --minify --sourcemap --outdir=src/public/js --outbase=src/views/ts",
    "watch:frontend": "yarn build:frontend --watch",
    "tailwind:css": "npx tailwindcss -i ./src/public/styles/tailwind.css -o ./src/public/styles/style.css",
    "tailwind:css:watch": "yarn tailwind:css --watch"
  },
  "dependencies": {
    "@nestjs/axios": "^3.1.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/platform-ws": "^10.4.1",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.4.1",
    "BOID-model": "https://github.com/BOID-Smart-Assistent/BOID-model.git#v0.0.25",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.8",
    "class-transformer": "^0.5.1",
    "express-handlebars": "^8.0.1",
    "hbs": "^4.2.0",
    "mysql2": "^3.11.3",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "preline": "^2.5.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "serpapi": "^2.1.0",
    "tailwindcss": "^3.4.13",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.11",
    "@tailwindcss/forms": "^0.5.9",
    "@types/express": "^4.17.17",
    "@types/hbs": "^4.0.4",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "packageManager": "yarn@4.5.1"
}
