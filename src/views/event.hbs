<div>
  <div class="flex flex-row">
    <h1 class="text-4xl">
      Likes
    </h1>
    <div class="ml-auto w-72 space-y-3">
      <input type="text" id="userId" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" placeholder="ID">
    </div>
  </div>

</div>

<ul role="list" class="divide-y divide-gray-100 divide-slate-700 divide-y">
  {{#each presentations}}
    <li class="flex w-full justify-between gap-x-6 py-5 ">
      <div class="flex flex-col w-full bg-white border shadow-sm rounded-xl">
        <div class="p-4 md:p-5">
          <h3 class="text-lg font-bold text-gray-800">
            {{topic}}
          </h3>
          <p class="mt-1 text-gray-500">
            {{name}}
          </p>
          <button class="likeButton mt-2 py-2 px-3 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-green-600 text-white hover:bg-green-700 focus:outline-none focus:bg-green-700 disabled:opacity-50 disabled:pointer-events-none" data-id="{{id}}">
            Like
          </button>
          <button class="dislikeButton mt-2 py-2 px-3 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-red-600 text-white hover:bg-red-700 focus:outline-none focus:bg-red-700 disabled:opacity-50 disabled:pointer-events-none" data-id="{{id}}">
            Dislike
          </button>
        </div>
      </div>
    </li>

  {{/each}}
</ul>
{{#block "pageScripts"}}
  <script src="/js/event.js"></script>
{{/block}}

